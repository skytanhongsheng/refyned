<div class="context border border-3 rounded p-5 mt-5 mb-5">
  <p><%= cl_image_tag @card.picture.key, height: 300, width: 400, crop: :fill %></p>
</div>

<% if mode == "learning"%>
  <div class="d-flex flex-column">
    <%= card.model_answer %>
    <%= link_to 'Next', next_card.nil? ? card.lesson : card_path("learning", next_card) %>
  </div>
<% else %>
  <p><%= @card.instruction %></p>
  <div class="text-center">
    <%= simple_form_for @card, url: attempt_card_path(@card) do  |f| %>
      <%= f.input :user_answer, label: false %>
      <%= f.submit "Answer" %>
    <% end %>
  </div>
<% end %>
