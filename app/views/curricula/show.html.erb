<div class="banner-background rounded-5 p-3 py-3 my-5 border shadow-sm">
  <div class="d-flex justify-content-between">
    <%= link_to "< All curricula", curricula_path, class: "text-decoration-none mx-5 justify-content-start"  %>
    <p class="add-curriculum-btn"><%= @curriculum.language.name %></p>
  </div>
  <h1 class="mx-5"><%= @curriculum.title %></h1>
<div class="mb-3">
  <span class="mx-5">Scheduled from <%= @curriculum.start_date %> to <%= @curriculum.end_date %></span>
</div>
<div class= "d-flex mx-5">
  <p><strong>Purpose:</strong> &nbsp;</p>
  <%= @curriculum.purpose %>
</div>
<div class= "d-flex mx-5">
  <p><strong>Context</strong>: &nbsp;</p>
  <%= @curriculum.context %>
</div>
</div>

  <div class="d-flex vertical-tabs gap-2" data-controller="vertical-tabs">
    <%# tabs %>

    </div>
    <%# tab contents %>

        <%= render 'lessons', lessons: @curriculum.lessons %>

      <div
        class="w-100 h-100 d-none"
        data-tab-id="bookmarks"
        data-vertical-tabs-target="tabContent"
      >
        <div>
          <% @curriculum.cards.each do |card| %>
            <div class="d-flex">
              <%= lucide_icon("bookmark", class: "me-2") %>
              <%= link_to card.instruction, card_path("learning", card), class: 'd-block' %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
